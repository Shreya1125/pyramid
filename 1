int main()
{
 for(int i=1;i<=7;i++)
 {
 for(int space=1;space<i;++space)
  cout<<" ";
  
 for(int j=i;j<=7;j++)
  cout<<j<<" ";
  
 cout<<endl;
 }
 for(int i=1;i<7;i++)
 {
  for(int space=1;space<7-i;space++)
  cout<<" ";
  
  for(int j=1,k=7-i;j<i,k<=7;j++)
   cout<<(k++)<<" ";
   
  cout<<endl;
 }
 return 0;
}
